<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mapsui="clr-namespace:Mapsui.UI.Avalonia;assembly=Mapsui.UI.Avalonia"
        xmlns:vm="clr-namespace:KalugaBus.AdminPanel.ViewModels"
        xmlns:models="clr-namespace:KalugaBus.AdminPanel.Models"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="KalugaBus.AdminPanel.Views.MainWindow"
        Title="Admin panel" MinWidth="800" MinHeight="450"
        Loaded="MainWindow_OnLoaded" x:DataType="vm:MainWindowViewModel">
    
    <TabControl Margin="0,0,0,10">
        <TabItem Header="Point editor">
            <Grid RowDefinitions="Auto,*">
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10">
                    <Label Content="Select route: " VerticalAlignment="Center" />
                    <ComboBox x:Name="PointRouteComboBox" 
                              PlaceholderText="Loading..." 
                              IsEnabled="False" 
                              SelectedIndex="{Binding PointSelectedRouteIndex}"
                              SelectionChanged="PointRouteComboBox_OnSelectionChanged"/>
                </StackPanel>
                <mapsui:MapControl Grid.Row="1" x:Name="PointMapView" />
            </Grid>
        </TabItem>
        <TabItem Header="Route editor">
            <ListBox x:Name="RouteListBox"
                     SelectionMode="Single">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid x:DataType="models:RouteDevice">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Image Grid.RowSpan="2"
                                   Source="{Binding Image}"
                                   Margin="0,0,10,0"
                                   HorizontalAlignment="Right"
                                   Height="20"
                                   Width="20" />
                            <Label Grid.Row="0" Grid.Column="1"
                                   Content="{Binding Name}"
                                   FontWeight="Bold" />
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   HorizontalAlignment="Stretch"
                                   Content="{Binding Route}"
                                   FontStyle="Italic"
                                   VerticalContentAlignment="Bottom" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </TabItem>
        <TabItem Header="Stops editor">
            <Grid RowDefinitions="Auto,*">
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10">
                    <Label Content="Select route: " VerticalAlignment="Center" />
                    <ComboBox x:Name="StopsRouteComboBox" 
                              PlaceholderText="Loading..." 
                              IsEnabled="False" 
                              SelectedIndex="{Binding PointSelectedRouteIndex}"
                              SelectionChanged="StopsRouteComboBox_OnSelectionChanged"/>
                </StackPanel>
                <mapsui:MapControl Grid.Row="1" x:Name="StopsMapView" />
            </Grid>
        </TabItem>
    </TabControl>
</Window>
